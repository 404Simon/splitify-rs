{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "leptos",
        "leptos_meta",
        "leptos_router",
        "leptos_axum"
      ],
      "groupName": "leptos monorepo"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 5am on monday"
    ]
  }
}
